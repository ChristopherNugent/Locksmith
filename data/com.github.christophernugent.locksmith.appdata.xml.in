    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0</project_license>
    <name>Locksmith</name>
    <summary>Generate strong, secure passwords</summary>
    <developer_name>Christopher Nugent</developer_name>
    <provides>
        <binary>com.github.christophernugent.locksmith</binary>
    </provides>
    <screenshots>
        <screenshot type="default">
            <image>https://i.imgur.com/lKGa4jG.png</image>
        </screenshot>
        <screenshot type="default">
            <image>https://i.imgur.com/Fs8TQVl.png</image>
        </screenshot>
    </screenshots>
    <description>
        <p>Locksmith is an application for generating secure passwords. It provides tools for both memorable word-based passwords and random alpha-numeric passwords.</p>
    </description>  
    <releases>
      <release version="1.5.1" date="2019-04-15">
        <description>
          Add French and Danish translations, courtesy of NathanBnm and siigdev
        </description>
      </release>
      <release version="1.4" date="2019-01-10">
        <description>
            New Features
            <ul>
              <li>Special characters in character-based passwords</li>
              <li>Copy to clipboard button to make copying passwords more convenient</li>
            </ul>
        </description>
      </release>
      <release version="1.3.2" date="2018-09-07">
        <description>
          <p>Fixed capitalization and spacing for the AppCenter listing</p>
        </description>
      </release>
      <release version="1.3.1" date="2018-08-31">
        <description>
          <p>Locksmith now looks more like the built in elementary OS tools, so you can feel at home using it.</p>
        </description>
      </release>
      <release version="1.3.0" date="2018-08-27">
        <description>
          <p>Update UI to more closely match elementary OS design guidelines</p>
        </description>
      </release>
      <release version="1.2.0" date="2018-08-24">
        <description>
          <p>Locksmith now restores its previous state when re-opened</p>
        </description>
      </release>
      <release version="1.1.0" date="2018-08-24">
        <description>
          <p>Locksmith can now generate word-based "xkcd style" passwords</p>
        </description>
      </release>
      <release version="1.0.0" date="2018-06-04">
        <description>
          <p>Initial 1.0.0 release!</p>
        </description>
      </release>
    </releases>
